<%- include("templates/header.ejs", {session:session}) -%>

<h1><%=blog.title%></h1>
<h3>Author: <%=blog.author_username%></h3>

<p><%=blog.body%></p>

<div class = "row">
    <h6 class = "col-sm-auto">Tags: </h6>
    <%for(let i = 0; i < tags.length; i++){%>
        <h6 class = "col-sm-auto"><%=tags[i].tagname%></h6>
    <%}%>
</div>

<%if(session.authenticated && (session.user == blog.author_username || session.isAdmin == 1)){%>
<form action=<%="/deletePost/"+blog.blogId%> method = "POST">
    <button class = "btn btn-danger">Delete Post</button>
</form>
<form action=<%="/editPost/"+blog.blogId%> method = "GET">
    <button class = "btn btn-warning">Edit Post</button>
</form>
<%}%>

<%- include("templates/footer.ejs") -%>